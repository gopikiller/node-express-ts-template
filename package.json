{
  "name": "node-express-ts-template",
  "version": "1.0.0",
  "description": "Node.js (Express) with TypeScript, Eslint, Jest, Prettier and Husky",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "lint": "eslint \"src/**/*.{ts,json}\"",
    "lint:fix": "eslint \"src/**/*.{ts,json}\" --fix",
    "format:check": "prettier --check \"src/**/*.{ts,json}\"",
    "format:fix": "prettier --write \"src/**/*.{ts,json}\"",
    "prepare": "husky install",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "NodeJs",
    "Express",
    "TypeScript",
    "Eslint",
    "Jest",
    "Prettier",
    "Husky"
  ],
  "author": "gopikiller",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/http-errors": "^1.8.1",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "husky": "^7.0.4",
    "nodemon": "^2.0.15",
    "prettier": "2.5.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "dotenv": "^11.0.0",
    "express": "^4.17.2",
    "http-errors": "^2.0.0"
  }
}